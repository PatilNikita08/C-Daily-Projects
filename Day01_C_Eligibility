#include <stdio.h>

int main() {
    int age;
    char name[50];

    printf("Enter Your Name: ");
    scanf("%s", name);

    printf("Enter Your Age: ");
    scanf("%d", &age);

    printf("Hello! %s\n", name);

    if (age >= 18) {
        printf("You are eligible for driving a car and voting.\n");
    } 
    else {
        printf("You are not eligible for driving a car and voting.\n");
    }
    return 0;
}
